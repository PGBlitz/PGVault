mathprime() {
  ### List Out Apps In Readable Order (One's Not Installed)
  num=0
  rm -rf /pg/var/program.temp 1>/dev/null 2>&1
  while read p; do
    echo -n $p >>/pg/var/program.temp
    echo -n " " >>/pg/var/program.temp
    num=$((num + 1))
    if [ "$num" == 7 ]; then
      num=0
      echo " " >>/pg/var/program.temp
    fi
  done </pg/var/pgvault.apprecall
}

